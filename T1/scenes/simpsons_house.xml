<SCENE>
	<INITIALS>
     <frustum near="0.1" far="500"/>                 
     <translation x="-1" y="1" z="0" />               
     <rotation axis="x" angle="0" />                
     <rotation axis="y" angle="0" />                
     <rotation axis="z" angle="0" />                
     <scale sx="0.25" sy="0.25" sz="0.25" />         
     <reference length="5" />                        
 </INITIALS>

 <ILLUMINATION>
     <ambient r="0.2" g="0.2" b="0.2" a="1" />       
     <background r="0" g="0" b="0" a="1" />          
 </ILLUMINATION>

 <LIGHTS>
  <LIGHT id="light0">
   <enable value="1" />
   <position x="5" y="20" z="5" w="1" />
   <ambient r="1" g="1" b="1" a="1.0" />        	 
   <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />        
   <specular r="1.0" g="1.0" b="1.0" a="1.0" /> 
</LIGHT>

<LIGHT id="light1">                                    
    <enable value ="1" />                             
    <position x="20" y="20" z="20" w="1" />             
    <ambient r="0.2" g="0.2" b="0.2" a="1.0" />       
    <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />        
    <specular r="1.0" g="1.0" b="1.0" a="1.0" />       
</LIGHT>

</LIGHTS>

<TEXTURES>

    <TEXTURE id="rocks">
     <file path="images/rocks.jpg" />                
     <amplif_factor s="1" t="1" />                           
 </TEXTURE>

 <TEXTURE id="vidral">
    <file path="images/vidral.jpg" />               
    <amplif_factor s="15" t="10" />                           
</TEXTURE>

<TEXTURE id="ecraTV">
    <file path="images/jornal-da-noite-sic.jpg" />               
    <amplif_factor s="15" t="10" />                           
</TEXTURE>

<!-- Silver lamp -->
<TEXTURE id="silver">
    <file path="images/silver.jpg" />                
    <amplif_factor s="1" t="1" />                           
</TEXTURE>

</TEXTURES>

<MATERIALS>
 <MATERIAL id="firstMaterial">                                  
     <shininess value="1" />
     <specular r="0.2" g="0.2" b="0.2" a="1" />        
     <diffuse r="1" g="1" b="1" a="1" />        
     <ambient r="0.1" g="0.1" b="0.1" a="1" />         
     <emission r="0.0" g="0.0" b="0.0" a="1" />        
 </MATERIAL>

 <MATERIAL id="extraMaterial">                                  
     <shininess value="1" />
     <specular r="0.8" g="0.8" b="0.8" a="1" />        
     <diffuse r="0.8" g="0.8" b="0.8" a="1" />        
     <ambient r="0.1" g="0.1" b="0.1" a="1" />         
     <emission r="0.0" g="0.0" b="0.0" a="1" />      
 </MATERIAL>

 <MATERIAL id="redMaterial">                                  
     <shininess value="1" />
     <specular r="0.5" g="0" b="0" a="1" />        
     <diffuse r="0.8" g="0" b="0" a="1" />        
     <ambient r="0.2" g="0" b="0" a="1" />         
     <emission r="0.0" g="0.0" b="0.0" a="1" />        
 </MATERIAL>

 <MATERIAL id="blackReflectiveMaterial">                                  
     <shininess value="1" />
     <specular r="0.2" g="0.2" b="0.2" a="1" />        
     <diffuse r="0" g="0" b="0" a="1" />        
     <ambient r="0" g="0" b="0" a="1" />         
     <emission r="0.0" g="0.0" b="0.0" a="1" />        
 </MATERIAL>

 <MATERIAL id="tvScreenMaterial">                                  
     <shininess value="1" />
     <specular r="0.3" g="0.3" b="0.3" a="1" />        
     <diffuse r="0.8" g="0.8" b="0.8" a="1" />        
     <ambient r="0.2" g="0.2" b="0.2" a="1" />         
     <emission r="0.7" g="0.7" b="0.7" a="1" />        
 </MATERIAL>
</MATERIALS>

<NODES>
	<ROOT id="main"/>

    <NODE id="main">       
        <MATERIAL id="extraMaterial" />     
        <TEXTURE id="rocks" />                   

        <DESCENDANTS>
            <NODEREF id="leftBlock" />
            <!--<NODEREF id="middleBlock" />
            <NODEREF id="rightBlock" />-->
        </DESCENDANTS>
    </NODE>


    <!-- Walls and Floors -->

    <NODE id="leftBlock">
        <MATERIAL id="null" />
        <TEXTURE id="clear" />

        <DESCENDANTS>
            <!--<NODEREF id="chimney" />-->
            <NODEREF id="blockLeft" />
            <!-- <NODEREF id="roof" />-->
        </DESCENDANTS>
    </NODE>

    <NODE id="blockLeft">
        <MATERIAL id="null" />
        <TEXTURE id="vidral" />

        <DESCENDANTS>
            <LEAF  type="cube" args="0 0 0 15 9 18" />
        </DESCENDANTS>
    </NODE>

   
    <NODE id="floor">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <ROTATION axis="x" angle="-90" />
        <TRANSLATION x="0" y="-30" z="0" />
        <SCALE sx="1" sy="1.5" sz="1" />  

        <DESCENDANTS>
            <NODEREF id="wall"/>
        </DESCENDANTS>
    </NODE>

    <NODE id="wall">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <DESCENDANTS>
            <LEAF  type="rectangle" args="0 20 30 0" />
        </DESCENDANTS>
    </NODE>

</NODES>

</SCENE>