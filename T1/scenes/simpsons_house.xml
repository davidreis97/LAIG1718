    <NODE id="blockRightBackBlock">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <DESCENDANTS>
            <LEAF  type="cube" args="0 0 0 8 7 7" />
        </DESCENDANTS>
    </NODE>

    <NODE id="garage">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <TRANSLATION x="8" y="0" z="0"/>

        <DESCENDANTS>
            <NODEREF id="garageRoofTriangle"/>
            <NODEREF id="garageRoof"/>
            <NODEREF id="garageBlock"/>
        </DESCENDANTS>
    </NODE>

    <NODE id="garageRoofTriangle">
        <MATERIAL id="null" />
        <TEXTURE id="null" />
        
        <DESCENDANTS>
            <LEAF  type="triangle" args="4 4 8 4 6 4 4 4 0" />
        </DESCENDANTS>
    </NODE>

    <NODE id="garageRoof">
        <MATERIAL id="null" />
        <TEXTURE id="null" />
        
        <DESCENDANTS>
            <NODEREF id="garageRoofLeft"/>
            <NODEREF id="garageRoofRight"/>
        </DESCENDANTS>
    </NODE>

    <NODE id="garageRoofLeft">
        <MATERIAL id="null" />
        <TEXTURE id="null" />
        
        <TRANSLATION x="0" y="4" z="-0.1"/>
        <ROTATION axis="x" angle="-24"/>
        <TRANSLATION x="0" y="0" z="-1"/>

        <DESCENDANTS>
            <NODEREF id="garageRoofCube"/>
        </DESCENDANTS>
    </NODE>

    <NODE id="garageRoofRight">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <TRANSLATION x="4.5" y="0" z="7.9"/>
        <ROTATION axis="y" angle="180"/>
        
        <DESCENDANTS>
            <NODEREF id="garageRoofLeft"/>
        </DESCENDANTS>
    </NODE>

    <NODE id="garageRoofCube">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <DESCENDANTS>
            <LEAF  type="cube" args="0 0 0 4.5 0.2 5.5" />
        </DESCENDANTS>
    </NODE>

    <NODE id="garageBlock">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <DESCENDANTS>
            <LEAF  type="cube" args="0 0 0 4 4 8" />
        </DESCENDANTS>
    </NODE>
</NODES>

</SCENE>