<SCENE>
	<INITIALS>
     <frustum near="0.1" far="500"/>                 
     <translation x="-1" y="1" z="0" />               
     <rotation axis="x" angle="0" />                
     <rotation axis="y" angle="0" />                
     <rotation axis="z" angle="0" />                
     <scale sx="0.25" sy="0.25" sz="0.25" />         
     <reference length="5" />                        
 </INITIALS>

 <ILLUMINATION>
     <ambient r="0.2" g="0.2" b="0.2" a="1" />       
     <background r="0" g="0" b="0" a="1" />          
 </ILLUMINATION>

 <LIGHTS>
  <LIGHT id="light0">
   <enable value="1" />
   <position x="5" y="20" z="5" w="1" />
   <ambient r="1" g="1" b="1" a="1.0" />        	 
   <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />        
   <specular r="1.0" g="1.0" b="1.0" a="1.0" /> 
</LIGHT>

<LIGHT id="light1">                                    
    <enable value ="1" />                             
    <position x="20" y="20" z="20" w="1" />             
    <ambient r="0.2" g="0.2" b="0.2" a="1.0" />       
    <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />        
    <specular r="1.0" g="1.0" b="1.0" a="1.0" />       
</LIGHT>

</LIGHTS>

<TEXTURES>

    <TEXTURE id="rocks">
     <file path="images/rocks.jpg" />                
     <amplif_factor s="1" t="1" />                           
 </TEXTURE>

 <TEXTURE id="vidral">
    <file path="images/vidral.jpg" />               
    <amplif_factor s="15" t="10" />                           
</TEXTURE>

<TEXTURE id="ecraTV">
    <file path="images/jornal-da-noite-sic.jpg" />               
    <amplif_factor s="15" t="10" />                           
</TEXTURE>

<!-- Silver lamp -->
<TEXTURE id="silver">
    <file path="images/silver.jpg" />                
    <amplif_factor s="1" t="1" />                           
</TEXTURE>

</TEXTURES>

<MATERIALS>
 <MATERIAL id="houseMaterial">                                  
     <shininess value="1" />
     <specular r="0.08" g="0.05" b="0.03" a="1" />        
     <diffuse r="0.83" g="0.59" b="0.38" a="1" />        
     <ambient r="0.08" g="0.05" b="0.03" a="1" />         
     <emission r="0.0" g="0.0" b="0.0" a="1" />        
 </MATERIAL>

 <MATERIAL id="extraMaterial">                                  
     <shininess value="1" />
     <specular r="0.8" g="0.8" b="0.8" a="1" />        
     <diffuse r="0.8" g="0.8" b="0.8" a="1" />        
     <ambient r="0.1" g="0.1" b="0.1" a="1" />         
     <emission r="0.0" g="0.0" b="0.0" a="1" />      
 </MATERIAL>

 <MATERIAL id="redMaterial">                                  
     <shininess value="1" />
     <specular r="0.5" g="0" b="0" a="1" />        
     <diffuse r="0.8" g="0" b="0" a="1" />        
     <ambient r="0.2" g="0" b="0" a="1" />         
     <emission r="0.0" g="0.0" b="0.0" a="1" />        
 </MATERIAL>

 <MATERIAL id="blackReflectiveMaterial">                                  
     <shininess value="1" />
     <specular r="0.2" g="0.2" b="0.2" a="1" />        
     <diffuse r="0" g="0" b="0" a="1" />        
     <ambient r="0" g="0" b="0" a="1" />         
     <emission r="0.0" g="0.0" b="0.0" a="1" />        
 </MATERIAL>

 <MATERIAL id="tvScreenMaterial">                                  
     <shininess value="1" />
     <specular r="0.3" g="0.3" b="0.3" a="1" />        
     <diffuse r="0.8" g="0.8" b="0.8" a="1" />        
     <ambient r="0.2" g="0.2" b="0.2" a="1" />         
     <emission r="0.7" g="0.7" b="0.7" a="1" />        
 </MATERIAL>
</MATERIALS>

<NODES>
	<ROOT id="main"/>

    <NODE id="main">       
        <MATERIAL id="houseMaterial" />     
        <TEXTURE id="null" />                   

        <DESCENDANTS>
            <NODEREF id="leftBlock" />
            <NODEREF id="middleBlock" />
            <NODEREF id="rightBlock" />
        </DESCENDANTS>
    </NODE>
    <!-- Walls and Floors -->

    <NODE id="leftBlock">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <DESCENDANTS>
            <!--<NODEREF id="chimney" />-->
            <NODEREF id="blockLeft" />
            <!-- <NODEREF id="roof" />-->
        </DESCENDANTS>
    </NODE>

    <NODE id="blockLeft">
        <MATERIAL id="null" />
        <TEXTURE id="null" />Â´

        <TRANSLATION x="2" y="0" z="17"/>

        <DESCENDANTS>
            <LEAF  type="cube" args="0 0 0 8 9 7" />
        </DESCENDANTS>
    </NODE>

    <NODE id="middleBlock">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <TRANSLATION x="0" y="0" z="7"/>

        <DESCENDANTS>
            <NODEREF id="blockMiddle" />
            <!-- <NODEREF id="middleBlockTriangles">  TOTOTOTOTOTODO--> 
            <NODEREF id="middleBlockRoof" />
        </DESCENDANTS>
    </NODE>

    <!-- right/middle block roof -->
    <NODE id="middleBlockRoof">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <DESCENDANTS>
            <NODEREF id="blockMiddleFrontRoof1" />
            <NODEREF id="blockMiddleFrontRoof2" />
            <NODEREF id="blockMiddleBackRoof" />
        </DESCENDANTS>
    </NODE>

    <NODE id="blockMiddleFrontRoof1">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <TRANSLATION x="-0.95" y="8.53" z="-1"/>
        <ROTATION axis="z" angle="27"/>

        <DESCENDANTS>
            <LEAF type="cube" args="0 0 0 7 0.2 11" />
        </DESCENDANTS>
    </NODE>

    <NODE id="blockMiddleFrontRoof2">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <TRANSLATION x="-0.1" y="8.97" z="8"/>
        <ROTATION axis="z" angle="27"/>

        <DESCENDANTS>
            <LEAF type="cube" args="0 0 0 6 0.2 11" />
        </DESCENDANTS>
    </NODE>

    <NODE id="blockMiddleBackRoof">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <TRANSLATION x="5.1" y="11.7" z="-1"/>
        <ROTATION axis="z" angle="-27"/>

        <DESCENDANTS>
            <LEAF type="cube" args="0 0 0 7 0.2 20" />
        </DESCENDANTS>
    </NODE>

    <NODE id="blockMiddle">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <DESCENDANTS>
            <LEAF  type="cube" args="0 0 0 10 9 10" />
        </DESCENDANTS>
    </NODE>

    <NODE id="rightBlock">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <DESCENDANTS>
            <NODEREF id="blockRightBack" />
            <NODEREF id="garage" />
        </DESCENDANTS>
    </NODE>

    <NODE id="blockRightBack">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <DESCENDANTS>
            <NODEREF id="blockRightBackTriangle"/>
            <NODEREF id="blockRightBackRoof"/>
            <NODEREF id="blockRightBackBlock"/>
        </DESCENDANTS>
    </NODE>

    <NODE id="blockRightBackTriangle">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <DESCENDANTS>
            <LEAF type="triangle" args="4 9 0 0 7 0 8 7 0" /> <!-- Might have reversed textures. -->
        </DESCENDANTS>
    </NODE>

    <NODE id="blockRightBackRoof">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <DESCENDANTS>
            <NODEREF id="blockRightBackFrontRoof" />
            <NODEREF id="blockRightBackBackRoof" />
        </DESCENDANTS>
    </NODE>

    <NODE id="blockRightBackFrontRoof">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <TRANSLATION x="-0.8" y="6.4" z="-1"/>
        <ROTATION axis="z" angle="27"/>

        <DESCENDANTS>
            <LEAF type="cube" args="0 0 0 5.5 0.2 8" />
        </DESCENDANTS>
    </NODE>

    <NODE id="blockRightBackBackRoof">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <TRANSLATION x="8" y="0" z="6"/>
        <ROTATION axis="y" angle="180"/>

        <DESCENDANTS>
            <NODEREF id="blockRightBackFrontRoof" />
