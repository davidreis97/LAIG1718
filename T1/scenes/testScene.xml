<SCENE>
	<INITIALS>
    	<frustum near="0.1" far="500"/>                 
    	<translation x="-1" y="1" z="0" />               
    	<rotation axis="x" angle="0" />                
    	<rotation axis="y" angle="0" />                
   		<rotation axis="z" angle="0" />                
    	<scale sx="0.25" sy="0.25" sz="0.25" />         
    	<reference length="5" />                        
	</INITIALS>

	<ILLUMINATION>
    	<ambient r="0.2" g="0.2" b="0.2" a="1" />       
    	<background r="0" g="0" b="0" a="1" />          
	</ILLUMINATION>

	<LIGHTS>
		<LIGHT id="light0">
			<enable value="1" />
			<position x="5" y="10" z="5" w="1" />
			<ambient r="0.2" g="0.2" b="0.2" a="1.0" />        	 
	        <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />        
	        <specular r="1.0" g="1.0" b="1.0" a="1.0" /> 
	    </LIGHT>
	</LIGHTS>

	<TEXTURES>
		<TEXTURE id="rocks">
	        <file path="images/rocks.jpg" />                
	        <amplif_factor s="1" t="1" />                           
    	</TEXTURE>
    </TEXTURES>

    <MATERIALS>
    	<MATERIAL id="piramideMaterial">                                  
        	<shininess value="1" />
        	<specular r="0" g="0" b="1" a="1" />        
        	<diffuse r="0" g="0" b="1" a="1" />        
        	<ambient r="0" g="0" b="1" a="1" />         
        	<emission r="0.0" g="0.0" b="0.0" a="1" />        
    	</MATERIAL>
    </MATERIALS>

<NODES>
	<ROOT id="banco"/>

	<NODE id="banco">       
        <MATERIAL id="piramideMaterial" />     
        <TEXTURE id="null" />       			

        <ROTATION axis="y" angle="90" />
        <SCALE sx="0.5" sy="0.5" sz="1.5" />
        
        <DESCENDANTS>

       		<NODEREF id="faceCubo1" />
            <NODEREF id="faceCubo2" />
            <NODEREF id="faceCubo3" />
            <NODEREF id="faceCubo4" />
            <NODEREF id="faceCubo5" />
            <NODEREF id="faceCubo6" />      
        </DESCENDANTS>

    </NODE>

    <NODE id="faceCubo1">       
        <MATERIAL id="null" />     
        <TEXTURE id="null" />       			

        <TRANSLATION x="2.5" y="4" z="7.5" />

        <DESCENDANTS>
					<LEAF  type="rectangle" args="0 4 5 0" />        
        </DESCENDANTS>

    </NODE>

    <!-- Another cube face -->
     <NODE id="faceCubo2">      
        <MATERIAL id="null" />     
        <TEXTURE id="null" />       			

        <TRANSLATION x="2.5" y="4" z="2.5" />
		<ROTATION axis="y" angle="-90" />

        <DESCENDANTS>
					<LEAF  type="rectangle" args="0 4 5 0" />        
        </DESCENDANTS>

    </NODE>

    <!-- Another cube face -->
    <NODE id="faceCubo3">       
        <MATERIAL id="null" />     
        <TEXTURE id="null" />       			

        <TRANSLATION x="7.5" y="4" z="7.5" />
		<ROTATION axis="y" angle="90" />

        <DESCENDANTS>
					<LEAF  type="rectangle" args="0 4 5 0" />        
        </DESCENDANTS>

    </NODE>

    <!-- Another cube face -->
    <NODE id="faceCubo4">       
        <MATERIAL id="null" />    
        <TEXTURE id="null" />       			

        <TRANSLATION x="7.5" y="4" z="2.5" />
        <ROTATION axis="y" angle="180" />

        <DESCENDANTS>
					<LEAF  type="rectangle" args="0 4 5 0" />        
        </DESCENDANTS>

    </NODE>

    <!-- Another cube face -->
    <NODE id="faceCubo5">       
        <MATERIAL id="null" />    
        <TEXTURE id="null" />       			

        <ROTATION axis="x" angle="-90" />
        <TRANSLATION x="2.5" y="-7.5" z="8" />
        <SCALE sx="1" sy="1.25" sz="1" />

        <DESCENDANTS>
 					<LEAF  type="rectangle" args="0 4 5 0" />        
       </DESCENDANTS>

    </NODE>

    <!-- Another cube face -->
    <NODE id="faceCubo6">       
        <MATERIAL id="null" />     
        <TEXTURE id="null" />       			

        <TRANSLATION x="2.5" y="4" z="2.5" />
        <ROTATION axis="x" angle="90" />
        <SCALE sx="1" sy="1.25" sz="1" />

        <DESCENDANTS>
					<LEAF  type="rectangle" args="0 4 5 0" />        
        </DESCENDANTS>

    </NODE>

</NODES>

</SCENE>
