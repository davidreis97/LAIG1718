<SCENE>
	<INITIALS>
       <frustum near="0.1" far="500"/>                 
       <translation x="-1" y="1" z="0" />               
       <rotation axis="x" angle="0" />                
       <rotation axis="y" angle="0" />                
       <rotation axis="z" angle="0" />                
       <scale sx="0.25" sy="0.25" sz="0.25" />         
       <reference length="5" />                        
   </INITIALS>

   <ILLUMINATION>
       <ambient r="0.2" g="0.2" b="0.2" a="1" />       
       <background r="0" g="0" b="0" a="1" />          
   </ILLUMINATION>

   <LIGHTS>
      <LIGHT id="light0">
         <enable value="1" />
         <position x="5" y="20" z="5" w="1" />
         <ambient r="1" g="1" b="1" a="1.0" />        	 
         <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />        
         <specular r="1.0" g="1.0" b="1.0" a="1.0" /> 
     </LIGHT>

     <LIGHT id="light1">                                    
        <enable value ="1" />                             
        <position x="20" y="20" z="20" w="1" />             
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />       
        <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />        
        <specular r="1.0" g="1.0" b="1.0" a="1.0" />       
    </LIGHT>

</LIGHTS>

<TEXTURES>

    <TEXTURE id="rocks">
       <file path="images/rocks.jpg" />                
       <amplif_factor s="1" t="1" />                           
   </TEXTURE>

   <TEXTURE id="vidral">
    <file path="images/vidral.jpg" />               
    <amplif_factor s="15" t="10" />                           
    </TEXTURE>

     <TEXTURE id="ecraTV">
    <file path="images/jornal-da-noite-sic.jpg" />               
    <amplif_factor s="15" t="10" />                           
    </TEXTURE>

</TEXTURES>

<MATERIALS>
   <MATERIAL id="firstMaterial">                                  
       <shininess value="1" />
       <specular r="0.2" g="0.2" b="0.2" a="1" />        
       <diffuse r="1" g="1" b="1" a="1" />        
       <ambient r="0.1" g="0.1" b="0.1" a="1" />         
       <emission r="0.0" g="0.0" b="0.0" a="1" />        
   </MATERIAL>

   <MATERIAL id="extraMaterial">                                  
       <shininess value="1" />
       <specular r="0.8" g="0.8" b="0.8" a="1" />        
       <diffuse r="0.8" g="0.8" b="0.8" a="1" />        
       <ambient r="0.1" g="0.1" b="0.1" a="1" />         
       <emission r="0.0" g="0.0" b="0.0" a="1" />      
   </MATERIAL>

   <MATERIAL id="redMaterial">                                  
       <shininess value="1" />
       <specular r="0.5" g="0" b="0" a="1" />        
       <diffuse r="0.8" g="0" b="0" a="1" />        
       <ambient r="0.2" g="0" b="0" a="1" />         
       <emission r="0.0" g="0.0" b="0.0" a="1" />        
   </MATERIAL>

   <MATERIAL id="blackReflectiveMaterial">                                  
       <shininess value="1" />
       <specular r="0.2" g="0.2" b="0.2" a="1" />        
       <diffuse r="0" g="0" b="0" a="1" />        
       <ambient r="0" g="0" b="0" a="1" />         
       <emission r="0.0" g="0.0" b="0.0" a="1" />        
   </MATERIAL>

   <MATERIAL id="tvScreenMaterial">                                  
       <shininess value="1" />
       <specular r="0.3" g="0.3" b="0.3" a="1" />        
       <diffuse r="0.8" g="0.8" b="0.8" a="1" />        
       <ambient r="0.2" g="0.2" b="0.2" a="1" />         
       <emission r="0.7" g="0.7" b="0.7" a="1" />        
   </MATERIAL>
</MATERIALS>

<NODES>
	<ROOT id="main"/>

    <NODE id="main">       
        <MATERIAL id="extraMaterial" />     
        <TEXTURE id="rocks" />                   

        <DESCENDANTS>
            <NODEREF id="floor" />
            <NODEREF id="walls" />
            <NODEREF id="furniture" />
            <NODEREF id="lampposts" />
            <NODEREF id="television" />
        </DESCENDANTS>
    </NODE>

    <!-- Generic Cube -->

    <NODE id="cube">       
        <MATERIAL id="null" />     
        <TEXTURE id="null" />                   
        
        <DESCENDANTS>
            <NODEREF id="cubeFace1" />
            <NODEREF id="cubeFace2" />
            <NODEREF id="cubeFace3" />
            <NODEREF id="cubeFace4" />
            <NODEREF id="cubeFace5" />
            <NODEREF id="cubeFace6" />      
        </DESCENDANTS>
    </NODE>

    <NODE id="cubeFace1">       
        <MATERIAL id="null" />     
        <TEXTURE id="null" />                   

        <ROTATION axis="y" angle="-90"/>

        <DESCENDANTS>
            <LEAF  type="rectangle" args="0 5 5 0" />        
        </DESCENDANTS>

    </NODE>

    <NODE id="cubeFace2">      
        <MATERIAL id="null" />     
        <TEXTURE id="null" />                   

        <ROTATION axis="x" angle="90"/>

        <DESCENDANTS>
            <LEAF  type="rectangle" args="0 5 5 0" />        
        </DESCENDANTS>

    </NODE>

    <NODE id="cubeFace3">       
        <MATERIAL id="null" />     
        <TEXTURE id="null" />                   

        <TRANSLATION x="0" y="0" z="5"/>

        <DESCENDANTS>
            <LEAF  type="rectangle" args="0 5 5 0" />        
        </DESCENDANTS>

    </NODE>

    <NODE id="cubeFace4">       
        <MATERIAL id="null" />    
        <TEXTURE id="null" />                   

        <ROTATION axis="y" angle="180"/>
        <TRANSLATION x="-5" y="0" z="0"/>

        <DESCENDANTS>
            <LEAF  type="rectangle" args="0 5 5 0" />        
        </DESCENDANTS>

    </NODE>

    <NODE id="cubeFace5">       
        <MATERIAL id="null" />    
        <TEXTURE id="null" />                   

        <ROTATION axis="y" angle="90"/>
        <TRANSLATION x="-5" y="0" z="5"/>

        <DESCENDANTS>
            <LEAF  type="rectangle" args="0 5 5 0" />        
        </DESCENDANTS>

    </NODE>

    <NODE id="cubeFace6">       
        <MATERIAL id="null" />     
        <TEXTURE id="null" />                   

        <ROTATION axis="x" angle="-90"/>
        <TRANSLATION x="0" y="-5" z="5"/>

        <DESCENDANTS>
            <LEAF  type="rectangle" args="0 5 5 0" />        
        </DESCENDANTS>
    </NODE>



    <!-- Walls and Floors -->

    <NODE id="walls">
        <MATERIAL id="null" />
        <TEXTURE id="clear" />

        <DESCENDANTS>
            <NODEREF id="wall1" />
            <NODEREF id="wall2" />
        </DESCENDANTS>
    </NODE>

    <NODE id="wall1">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <DESCENDANTS>
            <NODEREF id="wall"/>
        </DESCENDANTS>
    </NODE>

    <NODE id="wall2">
        <MATERIAL id="redMaterial" />
        <TEXTURE id="null" />

        <ROTATION axis="y" angle="-90" />
        <ROTATION axis="x" angle="180" />
        <TRANSLATION x="0" y="-20" z="0" />  

        <DESCENDANTS>
            <NODEREF id="wall"/>
        </DESCENDANTS>
    </NODE>

    <NODE id="wall">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <DESCENDANTS>
            <LEAF  type="rectangle" args="0 20 30 0" />
        </DESCENDANTS>
    </NODE>

    <NODE id="floor">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <ROTATION axis="x" angle="-90" />
        <TRANSLATION x="0" y="-30" z="0" />
        <SCALE sx="1" sy="1.5" sz="1" />  

        <DESCENDANTS>
            <NODEREF id="wall"/>
        </DESCENDANTS>
    </NODE>

    <!-- Furniture -->

    <NODE id="furniture">
        <MATERIAL id="extraMaterial"/>
        <TEXTURE id="clear"/>

        <DESCENDANTS>
            <NODEREF id="table"/>
        </DESCENDANTS>
    </NODE>

    <NODE id="table">
        <MATERIAL id="null"/>
        <TEXTURE id="null"/>

        <TRANSLATION x="6" y="0" z="6"/>

        <DESCENDANTS>
            <NODEREF id="tableLeg1"/>
            <NODEREF id="tableLeg2"/>
            <NODEREF id="tableLeg3"/>
            <NODEREF id="tableLeg4"/>
            <NODEREF id="tableTop" />
        </DESCENDANTS>
    </NODE>

    <NODE id="tableTop">
        <MATERIAL id="redMaterial"/>
        <TEXTURE id="null"/>

        <TRANSLATION x="0" y="6" z="0"/>
        <SCALE sx="1.5" sy="0.15" sz="2.5"/>

        <DESCENDANTS>
            <NODEREF id="cube"/>
        </DESCENDANTS>
    </NODE>

    <NODE id="tableLeg1">
        <MATERIAL id="null"/>
        <TEXTURE id="null"/>

        <TRANSLATION x="6.5" y="0" z="0"/>

        <DESCENDANTS>
            <NODEREF id="tableLeg"/>
        </DESCENDANTS>
    </NODE>

    <NODE id="tableLeg2">
        <MATERIAL id="null"/>
        <TEXTURE id="null"/>

        <TRANSLATION x="0" y="0" z="11.5"/>

        <DESCENDANTS>
            <NODEREF id="tableLeg"/>
        </DESCENDANTS>
    </NODE>

    <NODE id="tableLeg3">
        <MATERIAL id="null"/>
        <TEXTURE id="null"/>

        <TRANSLATION x="6.5" y="0" z="11.5"/>

        <DESCENDANTS>
            <NODEREF id="tableLeg"/>
        </DESCENDANTS>
    </NODE>

    <NODE id="tableLeg4">
        <MATERIAL id="null"/>
        <TEXTURE id="null"/>

        <DESCENDANTS>
            <NODEREF id="tableLeg"/>
        </DESCENDANTS>
    </NODE>


    <NODE id="tableLeg">
        <MATERIAL id="null"/>
        <TEXTURE id="rocks"/>

        <SCALE sx="0.2" sy="1.2" sz="0.2"/>

        <DESCENDANTS>
            <NODEREF id="cube"/>
        </DESCENDANTS>
    </NODE>

    <!-- Lamps -->

    <NODE id="lampposts">
        <MATERIAL id="extraMaterial"/>
        <TEXTURE id="null"/>

        <DESCENDANTS>
            <NODEREF id="lamppost1"/>
            <!-- <NODEREF id="lamppost2"/> -->
            <!-- <NODEREF id="lamppost3"/> -->
        </DESCENDANTS>
    </NODE>

    <NODE id="lamppost1">
        <MATERIAL id="null"/>
        <TEXTURE id="null"/>

        <TRANSLATION x="20" y="0" z="5"/>

        <DESCENDANTS>
            <NODEREF id="lamp"/>
        </DESCENDANTS>
    </NODE>

    <NODE id="lamp">       
        <MATERIAL id="null" />     
        <TEXTURE id="null" />                   

        <ROTATION axis="y" angle="90" />
        <SCALE sx="0.5" sy="0.5" sz="1.5" />

        <DESCENDANTS>

            <NODEREF id="lampShade" />
            <NODEREF id="lampSupport" />
            <NODEREF id="lampFeet" />

        </DESCENDANTS>
    </NODE>

    <NODE id="lampShade">
        <MATERIAL id="null"/>
        <TEXTURE id="null"/>

        <DESCENDANTS>
            <LEAF id="shade" type="cylinder" args="5 8 4 20 20" />
        </DESCENDANTS>
    </NODE>

    <NODE id="lampSupport">
        <MATERIAL id="null"/>
        <TEXTURE id="null"/>

        <DESCENDANTS>
            <LEAF id="post" type="cylinder" args="15 1 1 20 20" />
        </DESCENDANTS>
    </NODE>

    <NODE id="lampFeet">
        <MATERIAL id="null"/>
        <TEXTURE id="null"/>

        <DESCENDANTS>
            <LEAF id="foot" type="cylinder" args="3 5 5 20 20 1 1" />
        </DESCENDANTS>
    </NODE>

    <NODE id="television">
        <MATERIAL id="blackReflectiveMaterial"/>
        <TEXTURE id="clear"/>

        <SCALE sx="1.3" sy="1.3" sz="1.3"/>
        <TRANSLATION x="20" y="0" z="14" />
        <ROTATION axis="y" angle="-90" />

        <DESCENDANTS>
            <NODEREF id="tvSupport"/>
            <NODEREF id="tvBox"/>
            <NODEREF id="tvScreen"/>
            <NODEREF id="tvButton"/>
        </DESCENDANTS>
    </NODE>

    <NODE id="tvSupport">
        <MATERIAL id="null"/>
        <TEXTURE id="null"/>

        <DESCENDANTS>
            <NODEREF id="supportFoot"/>
            <NODEREF id="supportHolder"/>
        </DESCENDANTS>
    </NODE>

    <NODE id="supportFoot">
        <MATERIAL id="null"/>
        <TEXTURE id="null"/>

        <SCALE sx="0.5" sy="0.1" sz="0.3"/>

        <DESCENDANTS>
            <NODEREF id="cube"/>
        </DESCENDANTS>
    </NODE>

    <NODE id="supportHolder">
        <MATERIAL id="null"/>
        <TEXTURE id="null"/>

        <TRANSLATION x="1.25" y="2" z="0.75"/>
        <ROTATION axis="x" angle="90" />

        <DESCENDANTS>
            <LEAF id="foot" type="cylinder" args="2 0.2 0.2 10 10 1 1" />
        </DESCENDANTS>
    </NODE>

    <NODE id="tvBox">
        <MATERIAL id="null"/>
        <TEXTURE id="null"/>

        <TRANSLATION x="-2.75" y="2" z="0.75"/>
        <SCALE sx="1.5" sy="0.85" sz="0.02"/>

        <DESCENDANTS>
            <NODEREF id="cube"/>
        </DESCENDANTS>
    </NODE>

    <NODE id="tvScreen">
        <MATERIAL id="tvScreenMaterial"/>
        <TEXTURE id="ecraTV"/>

        <TRANSLATION x="-2.5" y="2.175" z="0.88"/>
        <DESCENDANTS>
            <LEAF type="rectangle" args="0 3.9 7 0"/>        
        </DESCENDANTS>
    </NODE>

    <NODE id="tvButton">
        <MATERIAL id="redMaterial"/>
        <TEXTURE id="null"/>

        <TRANSLATION x="3.4" y="2.05" z="0.88"/>
        <SCALE sx="0.02" sy="0.02" sz="0.02"/>
        
        <DESCENDANTS>
            <NODEREF id="cube"/>        
        </DESCENDANTS>
    </NODE>

</NODES>

</SCENE>