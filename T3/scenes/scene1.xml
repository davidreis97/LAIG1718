<SCENE>
    <INITIALS>
     <frustum near="0.1" far="500"/>                 
     <translation x="-1" y="1" z="0" />               
     <rotation axis="x" angle="0" />                
     <rotation axis="y" angle="0" />                
     <rotation axis="z" angle="0" />                
     <scale sx="0.25" sy="0.25" sz="0.25" />         
     <reference length="5" />                        
 </INITIALS>

 <ANIMATIONS>
    <ANIMATION id="testeLinear" type="linear" speed="4">
        <controlpoint xx="11" yy="0" zz="10"/>
        <controlpoint xx="11" yy="0" zz="-10"/>
    </ANIMATION>
 </ANIMATIONS>

 <ILLUMINATION>
     <ambient r="0.2" g="0.2" b="0.2" a="1" />       
     <background r="0.01" g="0.6" b="0.95   " a="1" />          
 </ILLUMINATION>

 <LIGHTS>
  <LIGHT id="light0">
   <enable value="1" />
   <position x="5" y="20" z="5" w="1" />
   <ambient r="1" g="1" b="1" a="1.0" />             
   <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />        
   <specular r="1.0" g="1.0" b="1.0" a="1.0" /> 
</LIGHT>

<LIGHT id="light1">                                    
    <enable value ="1" />                             
    <position x="20" y="20" z="20" w="1" />             
    <ambient r="0.2" g="0.2" b="0.2" a="1.0" />       
    <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />        
    <specular r="1.0" g="1.0" b="1.0" a="1.0" />       
</LIGHT>

</LIGHTS>

<TEXTURES>

  <TEXTURE id="HENGE_PIECE">
     <file path="images/HENGE_PIECE.jpg" />                
     <amplif_factor s="1" t="1" />                           
 </TEXTURE>

  <TEXTURE id="BLACK_PIECE">
     <file path="images/BLACK_PIECE.jpg" />                
     <amplif_factor s="1" t="1" />                           
 </TEXTURE>

  <TEXTURE id="WHITE_PIECE">
     <file path="images/WHITE_PIECE.jpg" />                
     <amplif_factor s="1" t="1" />                           
 </TEXTURE>

 <TEXTURE id="board">
     <file path="images/board_texture.jpg" />                
     <amplif_factor s="1" t="1" />                           
 </TEXTURE>

 <TEXTURE id="wood">
     <file path="images/table_texture.jpg" />                
     <amplif_factor s="1" t="1" />                           
 </TEXTURE>

 <TEXTURE id="green_felt">
     <file path="images/green_felt.jpg" />                
     <amplif_factor s="1" t="1" />                           
 </TEXTURE>

</TEXTURES>

<MATERIALS>
<MATERIAL id="normal">
    <shininess value="1" />
    <specular r="0.4" g="0.4" b="0.4" a="1" />        
    <diffuse r="0.8" g="0.8" b="0.8" a="1" />        
    <ambient r="0.08" g="0.08" b="0.08" a="1" />         
    <emission r="0.0" g="0.0" b="0.0" a="1" /> 
</MATERIAL>

<MATERIAL id="PIECE_MATERIAL">
    <shininess value="1" />
    <specular r="0.4" g="0.4" b="0.4" a="1" />        
    <diffuse r="0.8" g="0.8" b="0.8" a="1" />        
    <ambient r="0.08" g="0.08" b="0.08" a="1" />         
    <emission r="0" g="0" b="0" a="1" /> 
</MATERIAL>
 
</MATERIALS>

<NODES>
    <ROOT id="main"/>

    <NODE id="main">       
        <MATERIAL id="normal" />     
        <TEXTURE id="null" />   

        <DESCENDANTS>
            <NODEREF id="board"/>
            <NODEREF id="table"/>
        </DESCENDANTS>
    </NODE>

    <NODE id="board">
        <MATERIAL id="null"/>
        <TEXTURE id="board"/>

        <TRANSLATION x="11.4" y="13.7" z="14.5"/>
        <ROTATION axis="x" angle="-90"/>

        <DESCENDANTS>
            <LEAF type="tabuleiro" args="" />
        </DESCENDANTS>

    </NODE>


    
    <NODE id="table">
        <MATERIAL id="null"/>
        <TEXTURE id="wood"/>

        <TRANSLATION x="6" y="0" z="6"/>
        <SCALE sx="2" sy="2" sz="1"/>

        <DESCENDANTS>
            <NODEREF id="tableLeg1"/>
            <NODEREF id="tableLeg2"/>
            <NODEREF id="tableLeg3"/>
            <NODEREF id="tableLeg4"/>
            <NODEREF id="tableTop" />
            <NODEREF id="tableTopGreen" />
        </DESCENDANTS>
    </NODE>

    <NODE id="tableTop">
        <MATERIAL id="null"/>
        <TEXTURE id="null"/>

        <TRANSLATION x="0" y="6" z="0"/>
        <SCALE sx="1.5" sy="0.15" sz="2.5"/>

        <DESCENDANTS>
            <NODEREF id="cube"/>
        </DESCENDANTS>
    </NODE>

    <NODE id="tableTopGreen">
        <MATERIAL id="null"/>
        <TEXTURE id="green_felt"/>

        <TRANSLATION x="0.5" y="6.71" z="0.7"/>
        <SCALE sx="1.3" sy="0.01" sz="2.2"/>

        <DESCENDANTS>
            <NODEREF id="cube"/>
        </DESCENDANTS>
    </NODE>

    <NODE id="tableLeg1">
        <MATERIAL id="null"/>
        <TEXTURE id="null"/>

        <TRANSLATION x="6.5" y="0" z="0"/>

        <DESCENDANTS>
            <NODEREF id="tableLeg"/>
        </DESCENDANTS>
    </NODE>

    <NODE id="tableLeg2">
        <MATERIAL id="null"/>
        <TEXTURE id="null"/>

        <TRANSLATION x="0" y="0" z="11.5"/>

        <DESCENDANTS>
            <NODEREF id="tableLeg"/>
        </DESCENDANTS>
    </NODE>

    <NODE id="tableLeg3">
        <MATERIAL id="null"/>
        <TEXTURE id="null"/>

        <TRANSLATION x="6.5" y="0" z="11.5"/>

        <DESCENDANTS>
            <NODEREF id="tableLeg"/>
        </DESCENDANTS>
    </NODE>

    <NODE id="tableLeg4">
        <MATERIAL id="null"/>
        <TEXTURE id="null"/>

        <DESCENDANTS>
            <NODEREF id="tableLeg"/>
        </DESCENDANTS>
    </NODE>


    <NODE id="tableLeg">
        <MATERIAL id="null"/>
        <TEXTURE id="null"/>

        <SCALE sx="0.2" sy="1.2" sz="0.2"/>

        <DESCENDANTS>
            <NODEREF id="cube"/>
        </DESCENDANTS>
    </NODE>

 <NODE id="cube">       
        <MATERIAL id="null" />     
        <TEXTURE id="null" />                   
        
        <DESCENDANTS>
            <NODEREF id="cubeFace1" />
            <NODEREF id="cubeFace2" />
            <NODEREF id="cubeFace3" />
            <NODEREF id="cubeFace4" />
            <NODEREF id="cubeFace5" />
            <NODEREF id="cubeFace6" />      
        </DESCENDANTS>
    </NODE>

    <NODE id="cubeFace1">       
        <MATERIAL id="null" />     
        <TEXTURE id="null" />                   

        <ROTATION axis="y" angle="-90"/>

        <DESCENDANTS>
            <LEAF  type="rectangle" args="0 5 5 0" />        
        </DESCENDANTS>

    </NODE>

    <NODE id="cubeFace2">      
        <MATERIAL id="null" />     
        <TEXTURE id="null" />                   

        <ROTATION axis="x" angle="90"/>

        <DESCENDANTS>
            <LEAF  type="rectangle" args="0 5 5 0" />        
        </DESCENDANTS>

    </NODE>

    <NODE id="cubeFace3">       
        <MATERIAL id="null" />     
        <TEXTURE id="null" />                   

        <TRANSLATION x="0" y="0" z="5"/>

        <DESCENDANTS>
            <LEAF  type="rectangle" args="0 5 5 0" />        
        </DESCENDANTS>

    </NODE>

    <NODE id="cubeFace4">       
        <MATERIAL id="null" />    
        <TEXTURE id="null" />                   

        <ROTATION axis="y" angle="180"/>
        <TRANSLATION x="-5" y="0" z="0"/>

        <DESCENDANTS>
            <LEAF  type="rectangle" args="0 5 5 0" />        
        </DESCENDANTS>

    </NODE>

    <NODE id="cubeFace5">       
        <MATERIAL id="null" />    
        <TEXTURE id="null" />                   

        <ROTATION axis="y" angle="90"/>
        <TRANSLATION x="-5" y="0" z="5"/>

        <DESCENDANTS>
            <LEAF  type="rectangle" args="0 5 5 0" />        
        </DESCENDANTS>

    </NODE>

    <NODE id="cubeFace6">       
        <MATERIAL id="null" />     
        <TEXTURE id="null" />                   

        <ROTATION axis="x" angle="-90"/>
        <TRANSLATION x="0" y="-5" z="5"/>

        <DESCENDANTS>
            <LEAF  type="rectangle" args="0 5 5 0" />        
        </DESCENDANTS>
    </NODE>
    
</NODES>
</SCENE>
